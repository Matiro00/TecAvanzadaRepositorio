<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Elija una room</title>

</head>

<body class="background">
    <header class="titulo">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom">
            <div class="usuario">
                <h1>Usuario conectado: <strong>
                        <%= name %>
                    </strong></h1>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-buttons"
                aria-controls="navbar-buttons" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse in navbar-buttons" id="navbar-buttons">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a href="logout" class="btn btn-outline-danger my-2 my-sm-0"><svg
                                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-power" viewBox="0 0 16 16">
                                <path d="M7.5 1v7h1V1h-1z" />
                                <path
                                    d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z" />
                            </svg></a></button>
                    </li>

                </ul>
            </div>
        </nav>


    </header>
    <div class="waves-container">
        <div class="container container-salas">

            <div class="container">
                <h1 class="titulo-salas">Lista de salas <button type="button" class="btn btn-room-add"
                        data-toggle="modal" data-target="#roomModal">+</button></h1>
                
            </div>

            <% for (var i=0;i<rooms.length;i++) {%>
                <div class="container form-container">
                    <form action="joinroom" id="joinform">

                        <div class="row room-card">
                            <div class="col-10">
                                <div class="room-name">
                                    <input type="hidden" name="userid" value="<%=userid%>" />
                                    <input type="hidden" name="nombre" value="<%=name%>" />
                                    <input type="hidden" name="roomid" value="<%=rooms[i].id%>" />
                                    <input type="hidden" name="room" value="<%= rooms[i].name%>" />
                                    <p name="room" value='<%= rooms[i].name%>'>
                                        <%= rooms[i].name%>
                                    </p>
                                </div>
                            </div>
                            <div class="col-2 ">
                                <button type="submit" class="btn btn-custom"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-door-open" viewBox="0 0 16 16">
                                        <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                                        <path
                                            d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117zM11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5zM4 1.934V15h6V1.077l-6 .857z" />
                                    </svg></button>
                            </div>
                        </div>

                    </form>
                </div>
                <% }%>

        </div>

        <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
            <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
            </defs>
            <g class="parallax">
                <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(154,205,50,0.7)" />
                <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(40,40,40,0.5)" />
                <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(0,0,0,0.5)" />
                <use xlink:href="#gentle-wave" x="48" y="7" fill="rgba(40,40,40,0.5)" />
            </g>
        </svg>
    </div>
    <div class="modal fade" id="roomModal" tabindex="-1" role="dialog" aria-labelledby="roomModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content card-body">
                            <h5 class="card-title text-center mb-5 fw-light fs-5">Introduzca un nombre para la nueva
                                room
                            </h5>
                            <form action="newRoom" method="post">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="roomName" id="roomName">
                                    <label for="roomName" class="label-dark">Nombre de la room</label>
                                </div>
                                <div class="row center">
                                    <div class="col-6">
                                        <button class="btn btn-outline-success btn-new-room  text-uppercase fw-bold"
                                            type="submit">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                                class="bi bi-check-lg" viewBox="0 0 16 16">
                                                <path
                                                    d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="col-6"><button type="button"
                                            class="close btn btn-outline-danger btn-new-room text-uppercase fw-bold"
                                            data-dismiss="modal" aria-label="Close"><svg
                                                xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd"
                                                    d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z" />
                                                <path fill-rule="evenodd"
                                                    d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z" />
                                            </svg></button></div>
                                </div>
                        </div>
                    </div>
                </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"
    integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh"
    crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"
    integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ"
    crossorigin="anonymous"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% switch(situation){ case 1:%>
    <script>
        Swal.fire({
            title: "Cuidado!",
            text: "Debe ingresar un nombre para la room",
            icon: 'warning',
            heightAuto: false,
            showConfirmButton: true,
            timer: false
        })
    </script>
    <%break; case 2:%>
        <script>
            Swal.fire({
                title: "Error",
                text: "Ya hay una room con ese nombre",
                icon: 'error',
                heightAuto: false,
                showConfirmButton: true,
                timer: false
            })
        </script>
        <%break; case 3:%>
            <script>
                Swal.fire({
                    title: "Confirmacion",
                    text: "Se registro la sala correctamente",
                    icon: 'success',
                    heightAuto: false,
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
            <%break; }%>

</html>